{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [ "ES2020", "DOM", "DOM.Iterable" ],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,

        /* Linting */
        "strict": false,
        "alwaysStrict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": false,

        /* Javascript Support */
        "allowJs": true,

        "paths": {
            "@src/*": [ "./src/*" ],
            "@shaders/*": [ "./shaders/*" ],
            "@lib/*": [ "./lib/*" ],
            "three": [ "./lib/three.js-r156/src/Three.js" ],
            "three_addons/*": [ "./lib/three.js-r156/examples/jsm/*" ]
        }
    }
}
